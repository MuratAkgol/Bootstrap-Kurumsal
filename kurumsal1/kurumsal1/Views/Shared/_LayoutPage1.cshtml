    <script src="https://kit.fontawesome.com/9ca6a37d83.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/font-awesome.css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.lordicon.com/xdjxvujz.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Qwitcher+Grypen:wght@700&display=swap" rel="stylesheet">

    <link href="~/Content/css.css" rel="stylesheet" />

    <link rel="icon" href="~/bulut.png" type="image/x-icon" />
</head>
<body id="deneme" class="bground">
    <div>
        <div>
            <a href="/Home/Index" style="text-decoration:none;"> <h1 id="logo">NeckLoud</h1></a>
           
        </div>
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm navbar-light bg-white py-3">
                <a class="navbar-brand navbar-expand-sm px-5" href="/Home/Index" id="font"></a>
                <button class="navbar-toggler navbar-expand-sm navbar-expand-md" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse navbar-expand-sm" id="navbarNav">
                    <ul class="navbar-nav" id="navigasyon">
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/Index">
                                <lord-icon src="https://cdn.lordicon.com/hwixfird.json"
                                           trigger="morph"
                                           scale="40"
                                           style="width: 120px; height: 30px;padding-right:90px">

                                    <p style="padding-top:7px;padding-left:30px;font-size:20px;">Anasayfa</p>
                                </lord-icon>

                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/Hakkimizda">
                                <lord-icon src="https://cdn.lordicon.com/hvnymaak.json"
                                           trigger="morph"
                                           scale="40"
                                           style="width: 140px; height: 30px;padding-right:110px">

                                    <p style="padding-top:7px;padding-left:30px;font-size:20px;">Hakkımızda</p>
                                </lord-icon>

                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/Urunler">
                                <lord-icon src="https://cdn.lordicon.com/icaozhxa.json"
                                           trigger="morph"
                                           scale="40"
                                           style="width: 100px; height: 30px;padding-right:70px">

                                     <p style="padding-top:7px;padding-left:30px;font-size:20px;">Ürünler</p>
                                </lord-icon>

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item nav-link" href="/Home/Iletisim">
                                <lord-icon src="https://cdn.lordicon.com/ricptrwi.json"
                                           trigger="morph"
                                           scale="40"
                                           style="width: 100px; height: 30px;padding-right:70px ;background-color:;">

                                    <p style="padding-top:7px;padding-left:30px;font-size:20px;">İletişim</p>
                                </lord-icon>

                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <hr />
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    <div class="container bg-dark opacity-100">
        <h5 class="text-white">Bu site bootstrap çalışması için yazılmıştır.</h5>
    </div>
    
    <script>
        setTimeout(tariih, 3600000);

        function tariih() {
            var tarih = new Date;
            var saat = tarih.getHours();

            if (saat <= 20 || saat <= 5) {

                document.querySelector('#deneme').classList.replace('bground', 'bground2');
            }
            else {
                document.querySelector('#deneme').classList.replace('bground', 'bground');
            }
        }
        tariih();
    </script>
</body>
</html>
